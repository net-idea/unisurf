###> symfony/mailer ###
# SMTP config split into parts; override these in .env.local for real credentials.
MAIL_SCHEME=smtp
MAIL_HOST=localhost
#MAIL_HOST=mail.domain.tld
# tls | ssl | (leave empty for none)
#MAIL_ENCRYPTION=ssl
#MAIL_ENCRYPTION=tls
# Port for TLS: 587, for SSL: 465, without encryption: 25, Mailpit: 1025
#MAIL_PORT=465
#MAIL_PORT=587
MAIL_PORT=1025

# URL-encoded credentials (do NOT use these as From headers)
# '@' => %40, '#' => %23
MAIL_USER=
#MAIL_USER=user@domain.tld
MAIL_PASSWORD=

# Composed DSN for Symfony Mailer
#MAILER_DSN=null://null
MAILER_DSN="${MAIL_SCHEME}://${MAIL_USER}:${MAIL_PASSWORD}@${MAIL_HOST}:${MAIL_PORT}"
#MAILER_DSN="${MAIL_SCHEME}://${MAIL_USER}:${MAIL_PASSWORD}@${MAIL_HOST}:${MAIL_PORT}?encryption=${MAIL_ENCRYPTION}&auth_mode=plain"

# Sender/recipient used by MailManService
MAIL_FROM_ADDRESS="no-reply@localhost"
MAIL_FROM_NAME="Firstname Lastname"
MAIL_TO_ADDRESS="owner@localhost"
MAIL_TO_NAME="Firstname Lastname"
###< symfony/mailer ###

###> symfony/lock ###
LOCK_DSN=flock
