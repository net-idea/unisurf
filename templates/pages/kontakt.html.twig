{% extends 'base.html.twig' %}

{% block masthead %}
  <!-- Masthead -->
  <header class="masthead" style="background-image: url('{{ asset('images/header-bg.jpg') }}');">
    <div class="container">
      <div class="masthead-subheading">
        UniSurf Kontaktformular
      </div>
      <div class="masthead-heading text-uppercase">
        Wir sind für Sie da
      </div>
      <div class="masthead-subheading">
        Haben Sie Fragen zu unseren Leistungen oder ein konkretes Anliegen? Schreiben Sie uns – wir melden uns persönlich bei Ihnen.
      </div>
    </div>
  </header>
{% endblock %}

{% block body %}
  <section class="py-5" id="contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="text-center mb-5">
            <h2 class="section-heading text-uppercase">Nachricht senden</h2>
            <h3 class="section-subheading text-muted">Erzählen Sie uns von Ihrem Vorhaben oder Ihrer aktuellen Situation. Wir hören zu und schauen gemeinsam, wie wir Sie unterstützen können.</h3>
          </div>
          {# anchors used by redirects #}
          {% set submit = app.request.query.get('submit') %}
          {% set error = app.request.query.get('error') %}

          {# Flash messages from controller #}
          {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-3" role="alert" id="contact-success">
              {{ message }}
            </div>
          {% endfor %}

          {% for message in app.flashes('error') %}
            <div class="alert alert-danger mb-3" role="alert" id="contact-error">
              {{ message }}
            </div>
          {% endfor %}

          {# Query parameter messages (for redirects) #}
          {% if submit %}
            <div id="contact-success-redirect" class="alert alert-success mb-3" role="alert">
              Vielen Dank! Ihre Nachricht wurde erfolgreich versendet. Ich melde mich zeitnah bei Ihnen.
            </div>
          {% endif %}

          {% if error %}
            <div id="contact-error-redirect" class="alert alert-danger mb-3" role="alert">
              {% if error == 'rate' %}
                Bitte warten Sie einen Moment, bevor Sie das Formular erneut absenden.
              {% elseif error == 'mail' %}
                Leider konnte die E‑Mail nicht versendet werden. Bitte versuchen Sie es in Kürze erneut.
              {% else %}
                Es ist ein Fehler aufgetreten. Bitte prüfen Sie Ihre Eingaben und versuchen Sie es erneut.
              {% endif %}
            </div>
          {% endif %}

          {# Show validation errors only when form is submitted but invalid #}
          {% if form.vars.submitted and not form.vars.valid %}
            <div class="alert alert-danger" role="alert">
              <p>
                Bitte korrigieren Sie folgende Fehler:
              </p>
              <ul class="mb-0">
                {% for child in form.children %}
                  {% if (child.vars.errors|length) > 0 %}
                    {% for error in child.vars.errors %}
                      <li><strong>{{ child.vars.label }}:</strong> {{ error.message }}</li>
                    {% endfor %}
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          {{ form_start(form, { action: path('app_contact'), attr: { class: 'vstack gap-3 mt-3', novalidate: 'novalidate', 'data-turbo': 'false' } }) }}

          <div class="mb-3">
            {{ form_label(form.name, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.name, { attr: { class: (form.name.vars.errors|length) > 0 ? 'form-control is-invalid' : 'form-control' } }) }}
            {% for error in form.name.vars.errors %}
              <div class="invalid-feedback d-block">
                {{ error.message }}
              </div>
            {% endfor %}
          </div>

          <div class="mb-3">
            {{ form_label(form.email, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.email, { attr: { class: (form.email.vars.errors|length) > 0 ? 'form-control is-invalid' : 'form-control' } }) }}
            {% for error in form.email.vars.errors %}
              <div class="invalid-feedback d-block">
                {{ error.message }}
              </div>
            {% endfor %}
          </div>

          <div class="mb-3">
            {{ form_label(form.phone, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.phone, { attr: { class: (form.phone.vars.errors|length) > 0 ? 'form-control is-invalid' : 'form-control' } }) }}
            {% for error in form.phone.vars.errors %}
              <div class="invalid-feedback d-block">
                {{ error.message }}
              </div>
            {% endfor %}
          </div>

          <div class="mb-3">
            {{ form_label(form.message, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.message, { attr: { class: (form.message.vars.errors|length) > 0 ? 'form-control is-invalid' : 'form-control' } }) }}
            {% for error in form.message.vars.errors %}
              <div class="invalid-feedback d-block">
                {{ error.message }}
              </div>
            {% endfor %}
          </div>

          {# Honeypots (visually hidden) #}
          <div style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;" aria-hidden="true">
            {{ form_row(form.website) }}
            {{ form_row(form.emailrep) }}
          </div>

          <div class="mb-3">
            {{ form_widget(form.consent, { attr: { class: (form.consent.vars.errors|length) > 0 ? 'form-check-input is-invalid' : 'form-check-input' } }) }}
            {{ form_label(form.consent, null, { label_attr: { class: 'form-check-label' } }) }}
            {% for error in form.consent.vars.errors %}
              <div class="invalid-feedback d-block">
                {{ error.message }}
              </div>
            {% endfor %}
          </div>

          <div class="d-flex flex-wrap gap-2">
            {# Extra input submit to ensure tests find a button by value 'Absenden' in all rendering modes #}
            <input type="submit" value="Absenden" style="display:none;" />
            <button type="submit" class="btn btn-primary">Absenden</button>
            <span class="btn btn-cta contact-whatsapp">Über WhatsApp kontaktieren</span>
          </div>

          {{ form_rest(form) }}
          {{ form_end(form) }}
        </div>
      </div>
      <div class="row justify-content-center mt-5">
        <div class="col-lg-8">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title"><i class="fas fa-info-circle me-2"></i>Datenschutz</h4>
              <p class="card-text">
                Ihre Angaben werden ausschließlich zur Bearbeitung Ihrer Anfrage verwendet und anschließend gelöscht. Weitere Informationen finden Sie in unserer <a href="{{ path('app_page', { slug: 'datenschutz' }) }}">Datenschutzerklärung</a>.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
