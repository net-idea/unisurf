<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {% block title %}
        {{ pageMeta.title|default('UniSurf - Unique Surfing') }}
      {% endblock %}
    </title>

    <meta name="description" content="{{ pageMeta.description|default('UniSurf bietet Services für einzigartige Ideen') }}" />
    <meta name="keywords" content="{{ pageMeta.keywords|default('UniSurf, Webentwicklung, Hosting') }}" />
    <meta name="robots" content="{{ pageMeta.robots|default('index,follow') }}" />

    <link rel="canonical" href="{{ url('app_page', { slug: slug|default('start') }) }}" />

    <meta property="og:title" content="{{ pageMeta.title|default('UniSurf') }}" />
    <meta property="og:description" content="{{ pageMeta.description|default('') }}" />
    <meta property="og:image" content="{{ pageMeta.og_image|default('/assets/og/start.jpg') }}" />
    <meta property="og:type" content="website" />

    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}" />
    <link rel="icon" href="{{ asset('favicon.ico') }}" sizes="any" />

    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body id="page-top" data-turbo-suppress-warning>
    {% include '_partials/navbar.html.twig' %}

    {% block masthead %}
      <!-- Masthead -->
      <header class="masthead">
        <div class="container">
          <div class="masthead-subheading">
            Wir bieten den Service für einzigartige Ideen
          </div>
          <div class="masthead-heading text-uppercase">
            Unique Surfing!
          </div>
          <a class="btn btn-primary btn-xl text-uppercase" href="#services">Unsere Services</a>
        </div>
      </header>
    {% endblock %}

    {% block content %}
      <section class="page-section" id="services">
        <div class="container">
          {% block body %}

          {% endblock %}
        </div>
      </section>
    {% endblock %}

    {% include '_partials/footer.html.twig' %}
  </body>
</html>
